@page
@model Frontend.Pages.Prodotti.CreateModel

<section class="container mx-auto px-6 py-12 mt-20">
    <h2 class="text-4xl font-bold text-center text-gray-900 mb-8">
        <i class="fas fa-box"></i> Aggiungi un Nuovo Prodotto
    </h2>

    <!-- Visualizzazione errori -->
    @if(Model.ModelState.IsValid == false)
    {
        <div class="p-4 bg-red-100 border-l-4 border-red-600 text-red-700">
            <i class="fas fa-exclamation-circle mr-3"></i>
            <ul class="list-disc pl-5">
                <li>Errore. Per favore, controlla i campi.</li>
            </ul>
            <div asp-validation-summary="All" class="space-y-4"></div>
        </div>
    }
    

    <br />
    <div class="flex justify-center">
        <div class="w-full max-w-3xl bg-white p-8 rounded-lg shadow-lg">
            <form method="post" enctype="multipart/form-data" class="space-y-6">
                
                <!-- Nome Prodotto -->
                <div>
                    <label asp-for="NomeProdotto" class="block text-gray-800 font-medium">
                        <i class="fas fa-tag mr-2"></i> Nome del Prodotto
                    </label>
                    <input asp-for="NomeProdotto" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="NomeProdotto" class="text-red-500 text-sm"></span>
                </div>

                <!-- Descrizione -->
                <div>
                    <label asp-for="Descrizione" class="block text-gray-800 font-medium">
                        <i class="fas fa-align-left mr-2"></i> Descrizione
                    </label>
                    <textarea maxlength="500" asp-for="Descrizione" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" rows="7"></textarea>
                    <span asp-validation-for="Descrizione" class="text-red-500 text-sm"></span>
                </div>

                <!-- Prezzo -->
                <div>
                    <label asp-for="Prezzo" class="block text-gray-800 font-medium">
                        <i class="fas fa-euro-sign mr-2"></i> Prezzo (€)
                    </label>
                    <input asp-for="Prezzo" step="0.01" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Prezzo" class="text-red-500 text-sm"></span>
                </div>

                <!-- Categoria -->
                <div>
                    <label asp-for="Categoria" class="block text-gray-800 font-medium">
                        <i class="fas fa-cogs mr-2"></i> Categoria
                    </label>
                    <input asp-for="Categoria" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Categoria" class="text-red-500 text-sm"></span>
                </div>

                <!-- Giacenza -->
                <div>
                    <label asp-for="Giacenza" class="block text-gray-800 font-medium">
                        <i class="fas fa-warehouse mr-2"></i> Quantità Disponibile
                    </label>
                    <input asp-for="Giacenza" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Giacenza" class="text-red-500 text-sm"></span>
                </div>

                <!-- Immagine -->
                <div>
                    <label asp-for="ImgFile" class="block text-gray-800 font-medium">
                        <i class="fas fa-image mr-2"></i> Immagine del Prodotto
                    </label>
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
                        <div class="space-y-1 text-center">
                            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="flex text-sm text-gray-600">
                                <label class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
                                    <span>Carica un file</span>
                                    <input asp-for="ImgFile" type="file" class="sr-only" accept="image/*" />
                                </label>
                                <p class="pl-1">o trascina qui</p>
                            </div>
                            <p class="text-xs text-gray-500">PNG, JPG, JPEG fino a 5MB</p>
                        </div>
                    </div>
                    <span asp-validation-for="ImgFile" class="text-red-500 text-sm"></span>
                </div>

                <!-- Bottone di Invio -->
                <div class="flex justify-center">
                    <button type="submit" class="px-6 py-3 bg-blue-900 text-white hover:shadow-lg transition-all duration-300 w-full md:w-auto transform hover:scale-105">
                        <i class="fas fa-plus-circle mr-2"></i> Aggiungi Prodotto
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

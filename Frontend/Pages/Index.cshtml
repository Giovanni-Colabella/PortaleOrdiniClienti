@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="font-bold text-2xl text-blue-600">GestioneFacile ti dà il benvenuto ;)</h1>
    <p class="font-semibold text-lg">Scegli cosa vuoi fare oggi:</p>
    
</div>

<div class="container mx-auto px-6 py-10 flex-grow">
    <!-- Griglia di Card -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-6">
        <!-- Card Clienti -->
        <div class="bg-white shadow-md p-6 rounded-lg flex flex-col justify-between">
            <h3 class="text-xl font-semibold text-blue-600 mb-4">Visualizza Clienti</h3>
            <p class="text-gray-700 mb-6">Gestisci e visualizza tutti i clienti registrati.</p>
            <a asp-page="/Clienti/Index" class="text-center text-white bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700 transition">Vai ai Clienti</a>
        </div>


        <div class="bg-white shadow-md p-6 rounded-lg flex flex-col justify-between">
            <h3 class="text-xl font-semibold text-green-600 mb-4">Aggiungi un nuovo cliente</h3>
            <p class="text-gray-600 mb-6">Aggiungi un nuovo cliente nel database</p>
            <a asp-page="/Clienti/Create" class="text-center text-white bg-green-600 px-4 py-2 rounded-lg hover:bg-green-700 transition ">Crea un cliente</a>
        </div>

        <div class="bg-white shadow-md p-6 rounded-lg flex flex-col justify-between">
            <h3 class="text-xl font-semibold text-blue-600 mb-4">Visualizza Ordini</h3>
            <p class="text-gray-700 mb-6">Gestisci e visualizza tutti gli ordini registrati.</p>
            <a asp-page="/Ordini/Index" class="text-center text-white bg-blue-600 px-4 py-2 rounded-lg hover:bg-blue-700 transition">Visualizza gli ordini</a>
        </div>

        <div class="bg-white shadow-md p-6 rounded-lg flex flex-col justify-between">
            <h3 class="text-xl font-semibold text-green-600 mb-4">Crea un nuovo ordine</h3>
            <p class="text-gray-600 mb-6">Aggiungi un nuovo ordine nel database</p>
            <a asp-page="/Ordini/Create" class="text-center text-white bg-green-600 px-4 py-2 rounded-lg hover:bg-green-700 transition ">Crea un ordine</a>
        </div>
    </div>
</div>


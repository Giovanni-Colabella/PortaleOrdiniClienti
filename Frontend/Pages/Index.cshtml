@page
@model Frontend.Pages.Prodotti.IndexModel

@{
    Layout = "_LayoutHome";
    ViewData["Title"] = "Lista Prodotti";
}

<div class="container mx-auto px-4 py-12">
    <!-- Titolo -->
    <div class="text-center mb-12">
        <h1 class="text-5xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent inline-block">
            <i class="fas fa-box-open mr-4"></i>@ViewData["Title"]
        </h1>
    </div>

    <!-- Ricerca  -->
    <div class="max-w-3xl mx-auto mb-16">
        <form method="get" class="flex items-center bg-white rounded-2xl shadow-xl p-2 transition-all duration-300 hover:shadow-2xl">
            <div class="flex-1">
                <input type="text" name="search"
                       class="w-full px-6 py-4 border-0 text-lg focus:ring-2 focus:ring-blue-400 rounded-2xl"
                       placeholder="Cerca il tuo prodotto..."
                       value="@Model.Search" />
            </div>
            <button type="submit" class="ml-4 p-4 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-transform duration-300 transform hover:scale-105">
                <i class="fas fa-search text-xl"></i>
            </button>
        </form>
    </div>

    <!-- Griglia prodotti  -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 px-8">
        @foreach (var prodotto in Model.Prodotti)
        {
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 flex flex-col h-full">
                <!-- Badge novità -->
                @if (prodotto.Giacenza > 0)
                {
                    <div class="absolute right-4 top-4 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-bold shadow-sm">
                        <i class="fas fa-certificate mr-2"></i>Disponibile
                    </div>
                }

                <!-- Immagine prodotto -->
                <div class="relative h-60 overflow-hidden rounded-t-2xl">
                    <img src="@Model.GetImmagineUrl(prodotto.ImgPath)"
                         alt="@Model.Truncate(prodotto.NomeProdotto, 20)"
                         class="w-full h-full object-cover transition-transform duration-500 hover:scale-110" />
                </div>

                <!-- Contenuto card -->
                <div class="p-6 flex flex-col flex-grow">
                    <div class="mb-4">
                        <h3 class="text-xl font-bold text-gray-800 mb-2">
                            <i class="fas fa-tag text-blue-500 mr-2"></i>
                            @Model.Truncate(prodotto.NomeProdotto, 24)
                        </h3>
                        <p class="text-sm text-gray-500 mb-3">
                            <i class="fas fa-layer-group text-purple-500 mr-2"></i>
                            @prodotto.Categoria
                        </p>
                    </div>

                    <div class="mt-auto">
                        <div class="flex justify-between items-center mb-4">
                            <p class="text-2xl font-bold text-blue-600">
                                @prodotto.Prezzo.ToString("C", System.Globalization.CultureInfo.CurrentCulture)
                            </p>
                            <span class="text-sm bg-gray-100 px-3 py-1 rounded-full">
                                <i class="fas fa-warehouse mr-2"></i>@prodotto.Giacenza
                            </span>
                        </div>

                        <!-- Pulsante acquisto  -->
                        <div class="text-center">
                            <button class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 rounded-xl
                                      hover:scale-105 transition-transform duration-300 shadow-md
                                      flex items-center justify-center gap-2">
                                <i class="fas fa-cart-plus text-lg"></i>
                                Aggiungi al Carrello
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Paginazione migliorata -->
    <div class="mt-16 flex justify-center items-center">
        <nav class="flex items-center space-x-4">
            <a href="?page=@(Model.CurrentPage - 1)&search=@Model.Search"
               class="px-5 py-3 bg-white text-gray-600 rounded-full shadow-md hover:shadow-lg transition-all
                      @(Model.CurrentPage <= 1 ? "opacity-50 cursor-not-allowed" : "hover:bg-blue-50")">
                <i class="fas fa-chevron-left"></i>
            </a>

            <span class="px-4 py-2 bg-blue-600 text-white rounded-full shadow-md">
                Pagina @Model.CurrentPage
            </span>

            <a href="?page=@(Model.CurrentPage + 1)&search=@Model.Search"
               class="px-5 py-3 bg-white text-gray-600 rounded-full shadow-md hover:shadow-lg transition-all
                      @(Model.CurrentPage >= Model.TotalPages ? "opacity-50 cursor-not-allowed" : "hover:bg-blue-50")">
                <i class="fas fa-chevron-right"></i>
            </a>
        </nav>
    </div>
</div>
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mb-12">
    <h1 class="font-extrabold text-4xl sm:text-5xl text-indigo-700 mb-4">GestioneFacile ti dà il benvenuto ;)</h1>
    <p class="font-medium text-lg text-gray-600">Scegli cosa vuoi fare oggi:</p>
</div>

<!-- Statistiche  -->
<div class="container mx-auto px-6 py-10 text-center">
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-xl">
            <i class="fas fa-id-badge" style="font-size: 48px; color: #a10fced0;"></i>
            <h2 class="text-xl font-semibold text-indigo-700">Clienti Registrati</h2>
            <p class="text-2xl font-bold text-gray-800">@Model.Stats.AllClienti</p>
            <p class="text-gray-600">Numero totale di clienti registrati nel database.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-xl">
            <i class="fas fa-boxes" style="font-size: 48px; color: #e74c3c;"></i>
            <h2 class="text-xl font-semibold text-orange-600">Ordini Completati</h2>
            <p class="text-2xl font-bold text-gray-800">@Model.Stats.AllOrdini</p>
            <p class="text-gray-600">Numero totale di ordini nel database </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-xl">
            <i class="fas fa-users" style="font-size: 48px; color: #49c249;"></i>
            <h2 class="text-xl font-semibold text-teal-600">Registrazioni Recenti</h2>
            <p class="text-2xl font-bold text-gray-800">@Model.Stats.WeeklyClienti</p>
            <p class="text-gray-600">Nuove registrazioni nella settimana corrente</p>
        </div>
    </div>
</div>



<div class="container mx-auto px-6 py-10 flex-grow">
    <!-- Griglia di Card -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 gap-6">
        <!-- Card Clienti -->
        <div class="bg-gradient-to-r from-indigo-400 via-indigo-500 to-indigo-600 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-users fa-3x mb-4"></i>
                <h3 class="text-xl font-semibold mb-4">Visualizza Clienti</h3>
                <p class="text-md">Gestisci e visualizza tutti i clienti registrati.</p>
            </div>
            <a asp-page="/Clienti/Index" class="text-center text-white bg-indigo-800 hover:bg-indigo-900 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Vai ai Clienti</a>
        </div>

        <!-- Card Aggiungi Cliente -->
        <div class="bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-user-plus fa-3x mb-4"></i>
                <h3 class="text-xl font-semibold mb-4">Aggiungi un nuovo cliente</h3>
                <p class="text-md">Aggiungi un nuovo cliente nel database.</p>
            </div>
            <a asp-page="/Clienti/Create" class="text-center text-white bg-teal-700 hover:bg-teal-800 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Crea un cliente</a>
        </div>

        <!-- Card Ordini -->
        <div class="bg-gradient-to-r from-orange-400 via-orange-500 to-orange-600 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-box-open fa-3x mb-4"></i>
                <h3 class="text-xl font-semibold mb-4">Visualizza Ordini</h3>
                <p class="text-md">Gestisci e visualizza tutti gli ordini registrati.</p>
            </div>
            <a asp-page="/Ordini/Index" class="text-center text-white bg-orange-700 hover:bg-orange-800 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Visualizza gli ordini</a>
        </div>

        <!-- Card Aggiungi Ordine -->
        <div class="bg-gradient-to-r from-gray-400 via-gray-500 to-gray-600 text-white shadow-xl hover:shadow-2xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-cart-plus fa-3x mb-4"></i>
                <h3 class="text-xl font-semibold mb-4">Crea un nuovo ordine</h3>
                <p class="text-md">Aggiungi un nuovo ordine nel database.</p>
            </div>
            <a asp-page="/Ordini/Create" class="text-center text-white bg-gray-700 hover:bg-gray-800 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Crea un ordine</a>
        </div>
    </div>
</div>

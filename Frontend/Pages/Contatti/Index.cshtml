@page
@model Frontend.Pages.Contatti.IndexModel
@{
    Layout = "_LayoutHome";
}

<!-- Contatti -->
<section class="container mx-auto px-6 py-12 mt-20">
    <h2 class="text-4xl font-bold text-center text-gray-900 mb-8">
        <i class="fas fa-envelope text-indigo-600"></i> Contattaci
    </h2>

    <div class="flex flex-col md:flex-row gap-12">
        <!-- Informazioni di contatto -->
        <div class="md:w-1/3 bg-white p-6 rounded-lg shadow-lg transform transition-transform">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Informazioni di contatto</h3>
            <p class="text-gray-600 mb-6">Hai una domanda o hai bisogno di assistenza? Siamo sempre qui per aiutarti! Contattaci utilizzando i metodi qui sotto.</p>
            <div class="space-y-4 text-gray-600">
                <p class="flex items-center">
                    <i class="fas fa-phone-alt mr-3 text-indigo-500"></i> <span>+39 000 111 0101</span>
                </p>
                <p class="flex items-center">
                    <i class="fas fa-envelope mr-3 text-indigo-500"></i> <span>info@easyshop.com</span>
                </p>
                <p class="flex items-center">
                    <i class="fas fa-map-marker-alt mr-3 text-indigo-500"></i> <span>Via di qua 111, 20100 LaCittaCheNonEsiste (CCNE)</span>
                </p>
            </div>
        </div>

        <!-- Modulo di contatto -->
        <div class="md:w-2/3 bg-white p-6 rounded-lg shadow-lg transform transition-transform ">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Inviaci un messaggio</h3>
            <form action="/Contatti/SendMessage" method="post" class="space-y-6">
                
                <div>
                    <label for="message" class="block text-gray-800 font-medium">Messaggio</label>
                    <textarea id="message" name="message" rows="6" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 placeholder-gray-400" placeholder="Scrivi il tuo messaggio qui..." required></textarea>
                </div>

                <div class="flex justify-center">
                    <button type="submit" class="px-6 py-3 bg-blue-900 text-white  hover:shadow-lg transition-all duration-300 w-full md:w-auto transform hover:scale-105">
                        Invia Messaggio
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

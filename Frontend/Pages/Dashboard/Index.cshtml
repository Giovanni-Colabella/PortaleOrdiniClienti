@page
@model IndexModel


<!-- Titolo -->
<div class="text-center mb-12">
    <h1 class="font-extrabold text-4xl sm:text-5xl text-indigo-700 mb-4 animate-bounce">
        <i class="fas fa-handshake text-indigo-500 mr-3"></i>
        <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
            GestioneFacile
        </span>
        ti dà il benvenuto <span class="text-purple-500">;)</span>
    </h1>
</div>


<section class="container mx-auto px-6 py-10">
    <div class="bg-gray-300 rounded-xl shadow-lg overflow-hidden">
        <div class="px-8 py-12 text-center">
            <p class="text-2xl font-semibold text-gray-800 mb-6">
                Benvenuto in <strong class="text-indigo-600">GestioneFacile</strong>, il cuore pulsante della tua
                attività! 🌟
            </p>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                Sei pronto a semplificare la gestione dei tuoi clienti, ordini e prodotti? Con la nostra dashboard
                intuitiva, tutto diventa più semplice e veloce! Qui potrai tenere sotto controllo ogni aspetto del tuo
                business con pochi clic.
            </p>
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                Con <strong class="text-indigo-600">GestioneFacile</strong>, risparmi tempo e gestisci tutto con una
                sola interfaccia elegante e funzionale. Inizia subito scegliendo una delle opzioni qui sotto e metti in
                moto la tua attività!
            </p>
        </div>
    </div>
</section>

<!-- Statistiche -->
<div class="container mx-auto px-6 py-10 text-center">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-gray-300 p-6 rounded-lg shadow-xl">
            <i class="fas fa-id-badge" style="font-size: 48px; color: #a10fced0;"></i>
            <h2 class="text-xl font-semibold text-indigo-700">Clienti Registrati</h2>
            <p class="text-2xl font-bold text-gray-800">@Model.Stats.AllClienti</p>
            <p class="text-gray-600">Numero totale di clienti registrati nel database.</p>
        </div>
        <div class="bg-gray-300 p-6 rounded-lg shadow-xl">
            <i class="fas fa-boxes" style="font-size: 48px; color: #e74c3c;"></i>
            <h2 class="text-xl font-semibold text-orange-600">Ordini Completati</h2>
            <p class="text-2xl font-bold text-gray-800">@Model.Stats.AllOrdini</p>
            <p class="text-gray-600">Numero totale di ordini nel database</p>
        </div>
        <div class="bg-gray-300 p-6 rounded-lg shadow-xl">
            <i class="fas fa-users" style="font-size: 48px; color: #49c249;"></i>
            <h2 class="text-xl font-semibold text-teal-600">Registrazioni Recenti</h2>
            <p class="text-2xl font-bold text-gray-800">@Model.Stats.WeeklyClienti</p>
            <p class="text-gray-600">Nuove registrazioni nella settimana corrente</p>
        </div>
    </div>
</div>

<!-- Griglia di Card -->
<div class="container mx-auto px-6 py-10 flex-grow">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
        <!-- Card per visualizzare clienti -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-users fa-3x mb-4 text-blue-500"></i>
                <h3 class="text-xl font-semibold mb-4">Visualizza Clienti</h3>
                <p class="text-md">Gestisci e visualizza tutti i clienti registrati.</p>
            </div>
            <a asp-page="/Clienti/Index" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Vai ai Clienti</a>
        </div>

        <!-- Card per aggiungere un nuovo cliente -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-user-plus fa-3x mb-4 text-green-500"></i>
                <h3 class="text-xl font-semibold mb-4">Aggiungi un nuovo cliente</h3>
                <p class="text-md">Aggiungi un nuovo cliente nel database.</p>
            </div>
            <a asp-page="/Clienti/Create" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Crea un cliente</a>
        </div>

        <!-- Card per visualizzare ordini -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-box-open fa-3x mb-4 text-blue-500"></i>
                <h3 class="text-xl font-semibold mb-4">Visualizza Ordini</h3>
                <p class="text-md">Gestisci e visualizza tutti gli ordini registrati.</p>
            </div>
            <a asp-page="/Ordini/Index" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Visualizza gli ordini</a>
        </div>

        <!-- Card per creare un nuovo ordine -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-cart-plus fa-3x mb-4 text-yellow-600"></i>
                <h3 class="text-xl font-semibold mb-4">Crea un nuovo ordine</h3>
                <p class="text-md">Aggiungi un nuovo ordine nel database.</p>
            </div>
            <a asp-page="/Ordini/Create" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Crea un ordine</a>
        </div>

        <!-- Card per creare un nuovo prodotto -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-tag fa-3x mb-4 text-purple-500"></i>
                <h3 class="text-xl font-semibold mb-4">Crea un nuovo prodotto</h3>
                <p class="text-md">Aggiungi un nuovo prodotto nel database.</p>
            </div>
            <a asp-page="/Prodotti/Create" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Crea un prodotto</a>
        </div>

        <!-- Card per rendere un utente amministratore -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-user-cog fa-3x mb-4 text-orange-400"></i>
                <h3 class="text-xl font-semibold mb-4">Rendi un utente Amministratore</h3>
                <p class="text-md">Promuovi un cliente a ruolo di amministratore.</p>
            </div>
            <a asp-page="/GiveRolesToUser/Index" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Rendi Admin</a>
        </div>

        <!-- Card per bannare un utente -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-user-slash fa-3x mb-4 text-red-500"></i>
                <h3 class="text-xl font-semibold mb-4">Blocca un Utente</h3>
                <p class="text-md">Se desideri impedire a un utente di accedere al sito, puoi bloccarlo direttamente da questa sezione.</p>
            </div>
            <a asp-page="/BanUser/Index" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Blocca un Utente</a>
        </div>

        <!-- Card per mettere il sito in manutenzione -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-tools fa-3x mb-4 text-amber-400"></i>
                <h3 class="text-xl font-semibold mb-4">Metti il Sito in Manutenzione</h3>
                <p class="text-md">Se hai bisogno di eseguire lavori di manutenzione, attiva questa opzione per informare gli utenti.</p>
            </div>
            <a asp-page="/Admin/Maintenance" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Metti in Manutenzione</a>
        </div>

        <!-- Card per cambiare le informazioni di contatto -->
        <div class="bg-gray-300 text-gray-800 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-500 p-6 rounded-lg flex flex-col justify-between">
            <div class="mb-4">
                <i class="fas fa-phone fa-3x mb-4 text-amber-700"></i>
                <h3 class="text-xl font-semibold mb-4">Modifica le tue informazioni di contatto</h3>
                <p class="text-md">Aggiorna il tuo numero di telefono, email e altre informazioni di contatto per rimanere connesso.</p>
            </div>
            <a asp-page="/Admin/UpdateContactInfo" class="text-center text-white bg-gray-600 hover:bg-gray-700 px-5 py-2 rounded-lg shadow-md transform hover:scale-105 transition">Modifica i tuoi contatti</a>
        </div>
    </div>
</div>

    <!-- Sezione Bug Report -->
    <section class="py-10 mt-12">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Hai trovato un problema?</h2>
            <p class="text-lg text-gray-600 mb-6">Segnala subito il problema e faremo il possibile per risolverlo in
                tempo!</p>

            <div class="flex justify-center space-x-6">
                <a href="mailto:supporto@gestionefacile.com" class="text-indigo-600 hover:text-indigo-800">
                    <i class="fas fa-envelope fa-2x mb-2"></i><br />
                    <span class="text-lg">Segnala tramite Email</span>
                </a>
            </div>
        </div>
    </section>
</div>


@page
@model Frontend.Pages.Auth.LoginModel
@{
    Layout = "_LayoutHome";
}

<div class="fixed inset-0 flex items-center justify-center">
    <div class="max-w-md w-full bg-white p-6 rounded-2xl shadow-lg">
        <h2 class="text-2xl font-bold text-center mb-4">Login</h2>
        <form id="loginForm" class="space-y-4" method="post">
            @if (Model.ListValidationErrors != null && Model.ListValidationErrors.Count != 0)
            {
                <div class="mb-4 p-4 bg-red-100 border border-red-400 rounded-lg shadow-md">
                    <div class="flex items-center mb-2">
                        <span><i class="fas fa-exclamation-triangle text-red-600"></i></span>
                        <p class="text-red-600 font-semibold text-sm">
                            Si è verificato un errore nell'invio dei dati
                        </p>
                    </div>
                    <ul class="list-disc pl-5 text-red-700 text-xs space-y-1">
                        @foreach (var error in Model.ListValidationErrors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email</label>
                <div class="relative mt-1">
                    <input asp-for="Input.Email" id="email" name="email"
                        class="w-full p-3 pl-10 border rounded-lg focus:ring focus:ring-blue-300"
                        placeholder="Inserisci la tua email" required />
                    <i class="fa-solid fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
            </div>
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                <div class="relative mt-1">
                    <input asp-for="Input.Password" id="password" name="password" type="password"
                        class="w-full p-3 pl-10 border rounded-lg focus:ring focus:ring-blue-300"
                        placeholder="Inserisci la password" required />
                    <i class="fa-solid fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">
                Accedi
            </button>
            <p class="text-center text-sm text-gray-600">
                Non hai un account? <a asp-page="/Auth/Registrati" class="text-blue-600 hover:underline">Registrati</a>
            </p>
        </form>
    </div>
</div>


